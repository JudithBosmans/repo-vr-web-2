{"file":"BlogNavigation-D09_a5Aa.js","mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAKA,UAAM,mBAAmB,IAAI,EAAE;AAG/B,UAAM,EAAE,KAAM,KAAS,CAAA,QAAA,SAAA,IAAAA,iBAAA,YAAA,aAAa,oBAAoB,YAAY;AAClE,YAAM,UAAU,MAAM,aAAa,OAAO,EACvC,KAAK,EAAE,MAAM,EAAG,CAAA,EAChB,MAAM,CAAC,EACP;AACH,aAAO;AAAA,IACT,CAAC,CAAA;AAGD,QAAI,KAAK,OAAO;AACd,WAAK,MAAM,QAAQ,UAAQ;AACzB,cAAM,SAAS,KAAK,QAAQ;AAC5B,YAAI,CAAC,iBAAiB,MAAM,MAAM,GAAG;AACnC,2BAAiB,MAAM,MAAM,IAAI,CAAE;AAAA,QACzC;AACI,yBAAiB,MAAM,MAAM,EAAE,KAAK,IAAI;AAAA,MAC5C,CAAG;AAAA,IACH;AAGA,aAAS,WAAW,MAAM;AACxB,YAAM,UAAU,EAAE,MAAM,WAAW,OAAO,QAAQ,KAAK,UAAW;AAClE,aAAO,IAAI,KAAK,IAAI,EAAE,mBAAmB,QAAW,OAAO;AAAA,IAC7D;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;","names":["_withAsyncContext"],"sources":["../../../../components/global/navs/BlogNavigation.vue"],"sourcesContent":["<script setup>\nimport { ref } from 'vue';\nimport { useAsyncData } from '#app'; // Ensure correct import for useAsyncData\n\n// Define a reactive reference to store the grouped content files\nconst groupedBlogFiles = ref({});\n\n// Fetch all content files\nconst { data } = await useAsyncData('contentBlogFiles', async () => {\n  const content = await queryContent('/blog')\n    .sort({ date: 1 })\n    .limit(5)\n    .find(); // Fetch all files and folders\n  return content;\n});\n\n// Group the content files by their folder\nif (data.value) {\n  data.value.forEach(file => {\n    const folder = file._dir || 'Uncategorized';\n    if (!groupedBlogFiles.value[folder]) {\n      groupedBlogFiles.value[folder] = [];\n    }\n    groupedBlogFiles.value[folder].push(file);\n  });\n}\n\n// Function to format the date\nfunction formatDate(date) {\n  const options = { year: 'numeric', month: 'long', day: 'numeric' };\n  return new Date(date).toLocaleDateString(undefined, options);\n}\n</script>\n\n<template>\n  <div>\n    <div v-for=\"(files, folder) in groupedBlogFiles\" :key=\"folder\" >\n      <ul>\n        <li v-for=\"(file, index) in files\" :key=\"index\" class=\"pb-3\">\n          <a :href=\"file._path\">{{ file.title || file._path }}\n          <p v-if=\"file.date\" class=\"text-xs opacity-50 hover:opacity-100\">last updated on: {{ formatDate(file.date) }}\n            <span v-if=\"file.author\" class=\"text-xs\">authored by: {{ file.author }} </span>\n          </p>\n        </a>\n        </li>\n      </ul>\n    </div>\n  </div>\n</template>\n"],"version":3}